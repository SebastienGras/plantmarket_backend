{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@types/*": ["types/*"],
      "@tests/*": ["tests/*"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"]
    },
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
